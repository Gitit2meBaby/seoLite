{
  "name": "seolite",
  "version": "1.0.0",
  "description": "The lightning-fast SEO plugin that's 40x smaller than the competition. Complete SEO toolkit without the bloat.",
  "type": "module",
  "author": "Daniel Thomas",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "seo",
    "lightweight",
    "performance",
    "schema",
    "meta-tags",
    "social-media"
  ],
  "scripts": {
    "dev": "vite --port 5173",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "node deploy.js",
    "deploy:watch": "node deploy.js --watch",
    "start": "npm run deploy:watch",
    "build:plugin": "node build-plugin.js",
    "release": "npm run build && npm run build:plugin",
    "clean": "rm -rf dist node_modules/.vite",
    "update": "npm run clean && npm run build && npm run deploy"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "archiver": "^7.0.1",
    "chokidar": "^3.5.3",
    "fs-extra": "^11.1.1",
    "sass": "^1.60.0",
    "vite": "^4.3.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
